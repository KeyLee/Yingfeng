<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/top_bar" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
  	xmlns:android="http://schemas.android.com/apk/res/android">
	 <LinearLayout 
	     android:orientation="vertical" 
	     android:id="@+id/login_information_layout" 
	     android:background="@drawable/otherinfo_items_bg" 
	     android:layout_width="fill_parent"
	     android:layout_margin="16sp"
	     android:layout_height="wrap_content">
	        	<RelativeLayout android:layout_marginTop="2sp" android:id="@+id/username" android:layout_width="fill_parent" android:layout_height="45.0dip">
	                <TextView android:layout_centerVertical="true" android:background="@color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4.0dip" android:text="确认收货到公司" android:textSize="22sp" style="@style/topbar_title" />
	                <Button android:layout_centerVertical="true" android:layout_alignParentRight="true" android:id="@+id/btn_isdefalut" android:textColor="@color/yellow_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4.0dip" android:layout_marginRight="4.0dip" android:gravity="right" android:background="@drawable/default_icon_pressed" android:imeOptions="actionDone" android:textSize="16sp" style="@style/topbar_title" />
	            </RelativeLayout>
	            <View android:layout_marginLeft="1.0px" android:layout_marginRight="1.0px" style="@style/ListItem.Divider" />
	            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
	                <TextView android:layout_marginTop="7sp" android:gravity="center_vertical" android:id="@+id/tv_address"  android:background="@color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4.0dip" android:text="寄送至:四川成都啊看见" android:singleLine="false" android:lines="2" android:textSize="18sp" />
	            	<RelativeLayout android:layout_below="@id/tv_address" android:id="@+id/username" android:layout_width="fill_parent" android:layout_height="45.0dip">
	               		 <TextView android:layout_centerVertical="true" android:background="@color/transparent" android:layout_width="wrap_content" android:id="@+id/tv_name" android:layout_height="wrap_content" android:layout_marginLeft="4.0dip" android:text="收件人:张伟"  android:textSize="18sp" style="@style/topbar_title" />
	                	 <TextView android:layout_centerVertical="true" android:background="@color/transparent" android:layout_alignParentRight="true" android:id="@+id/tv_phonenumber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4.0dip" android:layout_marginRight="4.0dip" android:gravity="right" android:text="联系电话：15397613004" android:imeOptions="actionDone" android:textSize="18sp" style="@style/topbar_title" />
	            	</RelativeLayout>
	            </RelativeLayout>
	    </LinearLayout>
</LinearLayout>