<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/rl_info">
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:paddingLeft="2sp"
	        android:paddingRight="2sp"
	        android:id="@+id/rl1"
	        android:layout_height="wrap_content">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20sp"
	        android:layout_marginLeft="10sp"
	        android:textSize="22sp"
	    	android:id="@+id/tv1"
	    	android:layout_centerVertical="true"
	        android:textColor="@color/yellow_light"
	        android:text="你可能在一下位置:"/>
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/tv1"
	        android:background="@drawable/mylocation_1"/>
	    </RelativeLayout>
	     <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_below="@id/rl1"
	        android:paddingLeft="6sp"
	        android:paddingRight="2sp"
	        android:layout_marginTop="10sp"
	        android:id="@+id/rl2"
	        android:layout_height="wrap_content">
	     <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/iv1"
	        android:layout_centerVertical="true"
	        android:background="@drawable/mylocation_2"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20sp"
	        android:layout_marginLeft="10sp"
	    	android:id="@+id/tv_position"
	    	style="@style/topbar_title"
	    	android:textSize="18sp"
	    	android:gravity="left"
	    	android:textColor="@color/black"
	    	android:layout_toRightOf="@id/iv1"
	    	android:layout_centerVertical="true"
	        android:text="四川成都"/>
	    </RelativeLayout>
	    <Button 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/rl2"
	        android:layout_marginTop="16sp"
	        android:id="@+id/btn_location_right"
	        android:layout_marginLeft="6sp"
	        android:text="正确,开始购物"
	        android:paddingLeft="9sp"
	        android:textSize="18sp"
	        android:drawableLeft="@drawable/right_icon"
	        android:gravity="left|center_vertical"
			android:onClick="onLocationRight"        
	        android:layout_marginRight="6sp"
	        android:background="@drawable/btn_area_selector"
	        />
	    <Button 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/btn_location_right"
	        android:layout_marginTop="7sp"
	        android:drawableLeft="@drawable/wrong_icon"
	        android:onClick="onLocationError"
	        android:textSize="18sp"
	        android:paddingLeft="9sp"
	        android:text="不正确,返回输入地址"
	        android:gravity="left|center_vertical"
	        android:layout_marginLeft="6sp"
	        android:id="@+id/btn_location_wrong"
	        android:layout_marginRight="6sp"
	        android:background="@drawable/btn_area_selector"
	        /></RelativeLayout>
    <ProgressBar 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb"
        android:layout_centerInParent="true"/>
</RelativeLayout>