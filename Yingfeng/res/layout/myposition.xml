<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include 
        layout="@layout/top_bar"
        android:id="@+id/top"></include>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb"
        android:layout_centerInParent="true"/>
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top"
        android:id="@+id/rl">"
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:paddingLeft="2sp"
        android:paddingRight="2sp"
        android:layout_marginTop="10sp"
        android:id="@+id/rl1"
        android:layout_height="wrap_content">
        <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv11"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mylocation_1"/>
 <!--   <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:textSize="18sp"
    	android:id="@+id/tv1"
    	android:layout_below="@id/iv11"
    	android:layout_centerVertical="true"
        android:textColor="@color/yellow_light"
        android:text="系统为你找到以下相关地址:"/> --> 
    </RelativeLayout>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/bottom"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:text="选择正确地址,进入下一步"
        android:background="@drawable/back_bar"/>
    <ListView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/rl1"
        android:divider="@color/K_black_light_6"
        android:layout_above="@id/bottom"
        android:id="@+id/list"></ListView></RelativeLayout>
</RelativeLayout>