<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/top_bar" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical"
  	xmlns:android="http://schemas.android.com/apk/res/android">
  	<RelativeLayout 
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
  	    >
  	    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/tv_order_sn"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:text="用户登录"/>
  	      <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginRight="10sp"
        android:id="@+id/tv_shipping_fee"
        android:layout_alignParentRight="true"
        android:text="用户登录"/>
  	</RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/login_information_layout" android:background="@drawable/otherinfo_items_bg" android:padding="0.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="8.0dip" android:layout_marginTop="10.0dip" android:layout_marginRight="8.0dip">
        	<LinearLayout android:id="@+id/username" android:layout_width="fill_parent" android:layout_height="45.0dip">
                <TextView android:id="@+id/tv_total_fee" android:layout_gravity="left|center" android:background="@color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4.0dip" android:text="订单总价：￥40" android:textSize="18sp" style="@style/topbar_title" />
                <TextView android:layout_gravity="center_vertical" android:id="@+id/tv_short_order_time" android:textColor="@color/yellow_light" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="4.0dip" android:layout_marginRight="4.0dip" android:gravity="right" android:text="12/24 07:55:55" android:imeOptions="actionDone" android:textSize="16sp" style="@style/topbar_title" />
            </LinearLayout>
            <View android:layout_marginLeft="1.0px" android:layout_marginRight="1.0px" style="@style/ListItem.Divider" />
            <LinearLayout android:layout_width="fill_parent" android:layout_height="45.0dip">
                <TextView android:id="@+id/tv_address" android:layout_gravity="left|center" android:background="@color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4.0dip" android:text="地址:" style="@style/TextView.SubTitle" />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>