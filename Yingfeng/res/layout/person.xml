<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    <include 
        layout="@layout/top_bar"
        android:id="@+id/top"/>
    <RelativeLayout 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/rl_login"
          
          android:layout_centerInParent="true">
          <TextView android:id="@+id/title" 
	          android:layout_width="wrap_content" 
	          android:layout_height="wrap_content"
	          android:singleLine="true"
	          android:textSize="16sp"
	          android:layout_centerHorizontal="true"
	          android:text="亲,还没有登录哦!"
	          android:paddingTop="7sp"
	          style="@style/topbar_title" />
           <Button
		        android:layout_width="150sp"
		        android:layout_height="50sp"
		        android:layout_marginLeft="20sp"
		        android:layout_marginRight="20sp"
		        android:text="去登录"
		        android:onClick="onLogin"
		        android:textColor="@color/gray"
		        android:layout_marginTop="20sp"
		        android:background="@drawable/btn_login_selector"
		        android:textSize="18sp"
		        android:layout_below="@id/title"/>
      </RelativeLayout>
       <ProgressBar 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/pb"
           android:visibility="gone"
           android:layout_centerInParent="true"/>
   <RelativeLayout 
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_below="@id/top"
       android:visibility="gone"
       android:layout_marginBottom="10sp"
       android:id="@+id/rl_info">
       <ScrollView 
           android:layout_width="fill_parent"
           android:layout_height="fill_parent">
           <LinearLayout 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
                <RelativeLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/rl_in"
			        android:layout_below="@id/top">
			        <FrameLayout 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="9sp"
			            android:id="@+id/fl_av"
			            android:layout_centerHorizontal="true"
			            android:background="@drawable/avator_back">
			            <ImageView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_gravity="center"
			                android:background="@drawable/aver_default"/>
			        </FrameLayout>
			        <TextView 
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_below="@id/fl_av"
			            android:gravity="center"
			            android:textSize="18sp"
			            style="@style/topbar_title"
			            android:layout_marginTop="9sp"
			            android:id="@+id/tv_name"
			            android:text="李正军  你好"/>
			        <View 
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			             android:layout_marginTop="2sp"
			             android:id="@+id/line"
			            android:layout_below="@id/tv_name"
			            android:background="@drawable/person_line"/>
			        <LinearLayout 
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_centerHorizontal="true"
			            android:layout_below="@id/line"
			            android:id="@+id/ll11"
			            android:gravity="center_horizontal"
			            android:orientation="horizontal">
			             <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="center"
			               android:textSize="18sp"
			            style="@style/topbar_title"
			            android:layout_marginTop="2sp"
			            android:text="共有可用积分数："/>
			             <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="center"
			               android:textSize="18sp"
			            style="@style/topbar_title"
			            android:id="@+id/tv_score"
			            android:textColor="@color/yellow_light"
			            android:layout_marginTop="2sp"
			            android:text="80分"/>
			        </LinearLayout>
			       
			        <RelativeLayout 
			            android:layout_width="fill_parent"
			            android:layout_height="50sp"
			            android:background="@drawable/person_btn_selector"
			            android:layout_marginTop="10sp"
			            android:clickable="true"
			            android:id="@+id/rl1"
			            android:layout_marginLeft="15sp"
			            android:layout_marginRight="15sp"
			            android:layout_below="@id/ll11">
			            <ImageView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:layout_marginLeft="15sp"
			                android:id="@+id/p_icon"
			                android:background="@drawable/person_order_icon"/>
			            <ImageView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:layout_marginRight="15sp"
			                android:id="@+id/p_more"
			                android:layout_alignParentRight="true"
			                android:background="@drawable/person_more"/>
			            <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:text="我的订单"
			                android:textSize="18sp"
			                style="@style/topbar_title"
			                android:gravity="left"
			                android:layout_marginLeft="10sp"
			                android:layout_toRightOf="@id/p_icon"
			                android:layout_toLeftOf="@id/p_more"/>
			        </RelativeLayout>
			        
			          <RelativeLayout 
			            android:layout_width="fill_parent"
			            android:layout_height="50sp"
			            android:background="@drawable/person_btn_selector"
			            android:layout_marginTop="10sp"
			            android:clickable="true"
			            android:id="@+id/rl2"
			            android:layout_marginLeft="15sp"
			            android:layout_marginRight="15sp"
			            android:layout_below="@id/rl1">
			            <ImageView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:layout_marginLeft="15sp"
			                android:id="@+id/p_icon"
			                android:background="@drawable/person_shouhuo"/>
			            <ImageView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:layout_marginRight="15sp"
			                android:id="@+id/p_more"
			                android:layout_alignParentRight="true"
			                android:background="@drawable/person_more"/>
			            <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:text="我的收货地址"
			                android:textSize="18sp"
			                style="@style/topbar_title"
			                android:gravity="left"
			                android:layout_marginLeft="10sp"
			                android:layout_toRightOf="@id/p_icon"
			                android:layout_toLeftOf="@id/p_more"/>
			        </RelativeLayout>
			        
			            <RelativeLayout 
			            android:layout_width="fill_parent"
			            android:layout_height="50sp"
			            android:background="@drawable/person_btn_selector"
			            android:layout_marginTop="10sp"
			            android:clickable="true"
			            android:id="@+id/rl3"
			            android:layout_marginLeft="15sp"
			            android:layout_marginRight="15sp"
			            android:layout_below="@id/rl2">
			            <ImageView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:layout_marginLeft="15sp"
			                android:id="@+id/p_icon"
			                android:background="@drawable/person_customer_icon"/>
			            <ImageView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:layout_marginRight="15sp"
			                android:id="@+id/p_more"
			                android:layout_alignParentRight="true"
			                android:background="@drawable/person_more"/>
			            <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:text="我关注的商家"
			                android:textSize="18sp"
			                style="@style/topbar_title"
			                android:gravity="left"
			                android:layout_marginLeft="10sp"
			                android:layout_toRightOf="@id/p_icon"
			                android:layout_toLeftOf="@id/p_more"/>
			        </RelativeLayout>
			        
			              <RelativeLayout 
			            android:layout_width="fill_parent"
			            android:layout_height="50sp"
			            android:background="@drawable/person_btn_selector"
			            android:layout_marginTop="10sp"
			            android:clickable="true"
			            android:id="@+id/rl4"
			            android:layout_marginLeft="15sp"
			            android:layout_marginRight="15sp"
			            android:layout_below="@id/rl3">
			            <ImageView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:layout_marginLeft="15sp"
			                android:id="@+id/p_icon"
			                android:background="@drawable/person_product_icon"/>
			            <ImageView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:layout_marginRight="15sp"
			                android:id="@+id/p_more"
			                android:layout_alignParentRight="true"
			                android:background="@drawable/person_more"/>
			            <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:text="我关注的商品"
			                android:textSize="18sp"
			                style="@style/topbar_title"
			                android:gravity="left"
			                android:layout_marginLeft="10sp"
			                android:layout_toRightOf="@id/p_icon"
			                android:layout_toLeftOf="@id/p_more"/>
			        </RelativeLayout>
			            
			    </RelativeLayout>
           </LinearLayout>
       </ScrollView>
   </RelativeLayout>
</RelativeLayout>