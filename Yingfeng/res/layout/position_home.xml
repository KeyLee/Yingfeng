<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
   <ImageSwitcher 
       android:layout_width="fill_parent"
       android:layout_height="200sp"
       android:focusable="true"
       android:layout_marginLeft="8sp"
       android:layout_marginRight="8sp"
       android:layout_marginTop="8sp"
       android:id="@+id/is_ads"
       android:focusableInTouchMode="true"
       android:background="@drawable/area_home"></ImageSwitcher>
    <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="4sp"
       android:id="@+id/ll_search"
       android:layout_below="@id/is_ads"
       android:orientation="horizontal">
       <EditText 
           android:layout_width="fill_parent"
           android:layout_height="36sp"
           android:layout_weight="1.0"
           android:inputType="text"
           android:textSize="14sp"
           android:id="@+id/et_input_address"
           android:textColor="@color/dimgray"
           android:gravity="center_vertical"
           android:paddingLeft="4sp"
           android:hint="@string/location_hint"
           android:background="@drawable/input_bg"/>
	       <LinearLayout 
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_weight="2.0"
	       android:layout_marginLeft="4sp"
	       android:orientation="horizontal">
	       <Button 
	           android:layout_width="wrap_content"
	           android:layout_height="36sp"
	           android:onClick="onSearch"
	           android:text="查找"
	           android:paddingLeft="9sp"
	           android:textSize="18sp"
	           android:drawableLeft="@drawable/search_icon"
	           android:background="@drawable/home_search_selector"/>
	 <!--       <Button 
	           android:layout_width="fill_parent"
	           android:layout_height="36sp"
	           android:layout_marginLeft="2sp"
	           android:onClick="onCode"
	           android:text="二维码"
	           android:textSize="16sp"
	           android:drawableLeft="@drawable/code_icon"
	           android:paddingLeft="0sp"
	           android:layout_weight="1.0"
	           android:background="@drawable/home_search_selector"/> -->
	        </LinearLayout>
   </LinearLayout>
   <View android:layout_below="@id/ll_search" android:id="@+id/v_line" android:layout_marginTop="2sp" android:layout_width="fill_parent" android:layout_height="1sp" android:background="@drawable/line"/>
   <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:background="@drawable/home_search_selector"
            android:clickable="true"
            android:onClick="onViewStore"
            android:id="@+id/rl_view_store"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_below="@id/ll11">
            <ImageView 
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginRight="15sp"
                android:layout_gravity="center_vertical"
                android:id="@+id/p_more"
                android:background="@drawable/home_store_icon"/>"
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="按商家查看"
                android:textSize="18sp"
                style="@style/topbar_title"
                android:gravity="left"
                android:layout_marginLeft="3sp"/>
        </LinearLayout>
    <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:background="@drawable/home_search_selector"
            android:layout_marginTop="10sp"
            android:clickable="true"
            android:onClick="onViewClass"
            android:gravity="center"
            android:id="@+id/rl_view_class"
            android:orientation="horizontal"
            android:layout_above="@id/rl_view_store">
            <ImageView 
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginRight="15sp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/home_class_icon"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="按分类查看"
                android:textSize="18sp"
                style="@style/topbar_title"
                android:gravity="left"
                android:layout_marginLeft="3sp"/>
        </LinearLayout>
   <RelativeLayout 
       android:layout_width="fill_parent"
        android:layout_marginTop="2sp"
        android:layout_above="@id/rl_view_class"
        android:layout_below="@id/v_line"
        android:layout_marginLeft="8sp"
       android:layout_marginRight="8sp"
       android:layout_height="fill_parent">
	       <ProgressBar 
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_centerInParent="true"
	           android:id="@+id/pb"/>
		   <ListView 
		       android:layout_width="fill_parent"
		       android:layout_height="fill_parent"
		       android:divider="@drawable/line"
		       android:id="@+id/list"></ListView>
   </RelativeLayout>
</RelativeLayout>